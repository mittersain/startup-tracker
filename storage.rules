rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Deck uploads - authenticated users can read/write their org's decks
    match /decks/{orgId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Email attachments - authenticated users can read/write their org's attachments
    match /attachments/{orgId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

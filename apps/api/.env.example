# ===========================================
# Database (Supabase PostgreSQL - Production)
# ===========================================
# Get your connection string from Supabase Dashboard:
# Project Settings > Database > Connection string > URI
# Use the "Transaction" pooler connection for serverless
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# For migrations, use the direct connection (Session mode)
# DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ===========================================
# JWT Authentication
# ===========================================
# CRITICAL: Generate a secure random secret (minimum 32 characters, recommended 64+)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-minimum-32-characters"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# ===========================================
# AI Services
# ===========================================
# Google Gemini AI (required for startup analysis & scoring)
GEMINI_API_KEY="your-gemini-api-key"

# Anthropic (optional)
# ANTHROPIC_API_KEY="your-anthropic-api-key"

# ===========================================
# Email Configuration
# ===========================================
# Gmail IMAP credentials are stored ENCRYPTED in the database per organization
# Configure via Settings UI in the application

# CRITICAL: Encryption key for email passwords (minimum 32 characters, recommended 64+)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ENCRYPTION_KEY="your-encryption-key-minimum-32-characters-change-this"

# ===========================================
# File Storage (S3-compatible)
# ===========================================
# For production, use Supabase Storage or AWS S3
S3_ENDPOINT="https://[project-ref].supabase.co/storage/v1/s3"
S3_ACCESS_KEY="your-supabase-storage-access-key"
S3_SECRET_KEY="your-supabase-storage-secret-key"
S3_BUCKET="startup-tracker"
S3_REGION="us-east-1"

# For local development with MinIO:
# S3_ENDPOINT="http://localhost:9000"
# S3_ACCESS_KEY="minioadmin"
# S3_SECRET_KEY="minioadmin"

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=production
CORS_ORIGIN="https://your-frontend-domain.com"

# ===========================================
# Backup (disabled for PostgreSQL - use Supabase backups)
# ===========================================
BACKUP_ENABLED=false
